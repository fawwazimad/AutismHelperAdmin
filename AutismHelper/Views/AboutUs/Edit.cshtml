@model AutismHelper.ViewModels.MainVM

@{
    ViewData["Title"] = "Edit";
}


<div class="pagetitle">
    <h1>
        Edit 
    </h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">About Us</a></li>
            <li class="breadcrumb-item active">    Edit About Us</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<h4>About Us</h4>

<section class="section">
    <div class="row">
        <div class="col-lg-6">

            <div class="card">
                <div class="card-body">
                    <br />
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group" style="display:none">
                            <label asp-for="AboutUsRecord.Id" class="control-label"></label>
                            <input asp-for="AboutUsRecord.Id" class="form-control" />
                            <span asp-validation-for="AboutUsRecord.Id" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="display:none">
                            <label asp-for="AboutUsRecord.IDD" class="control-label"></label>
                            <input asp-for="AboutUsRecord.IDD" class="form-control" />
                            <span asp-validation-for="AboutUsRecord.IDD" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="AboutUsRecord.Email" class="control-label"></label>
                            <input asp-for="AboutUsRecord.Email" class="form-control" required />
                            <span asp-validation-for="AboutUsRecord.Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="AboutUsRecord.MobilePhone" class="control-label"></label>
                            <input asp-for="AboutUsRecord.MobilePhone" class="form-control" required />
                            <span asp-validation-for="AboutUsRecord.MobilePhone" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="AboutUsRecord.Text" class="control-label"></label>
                            <input asp-for="AboutUsRecord.Text" class="form-control" required />
                            <span asp-validation-for="AboutUsRecord.Text" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="AboutUsRecord.address" class="control-label"></label>
                            <input asp-for="AboutUsRecord.address" class="form-control" required />
                            <span asp-validation-for="AboutUsRecord.address" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            <input type="submit" value="Save" class="btn btn-primary">
                            <a class="btn btn-secondary" asp-action="Index">Back to List</a>

                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</section>

