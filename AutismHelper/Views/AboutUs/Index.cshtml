@model AutismHelper.ViewModels.MainVM

@{
    ViewData["Title"] = "Index";
}

<div class="pagetitle">
    <h1>About Us</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">Data</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 style="margin:revert;">
                        <a asp-action="Create" type="button" class="btn btn-outline-primary">Create New</a>
                    </h5>
                    <table class="table datatable">
                        <thead>
                            <tr>

                                <th>
                                    ID
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AboutUsRecord.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AboutUsRecord.MobilePhone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AboutUsRecord.Text)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AboutUsRecord.address)
                                </th>
                                <th>Edit</th>
                                <th>Details</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.AboutUsList)
                            {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.IDD)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MobilePhone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Text)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.address)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.IDD">


                                        <i class=" ri-edit-circle-fill"></i>
                                    </a>
                                </td>
                                <td>

                                    <a asp-action="Details" asp-route-id="@item.IDD">


                                        <i class=" ri-information-fill"></i>
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.IDD">


                                        <i class=" ri-delete-bin-5-fill"></i>
                                    </a>
                                </td>
                                @*<td>
            @Html.ActionLink("Edit", "Edit", new { id = item.IDD }) |
            @Html.ActionLink("Details", "Details", new { id = item.IDD }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.IDD })
        </td>*@
                            </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</section>
