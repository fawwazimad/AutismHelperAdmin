@model AutismHelper.ViewModels.MainVM

@{
    ViewData["Title"] = "Index";
}


@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<div class="pagetitle">
    <h1>Contact Us</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">Data</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                   
                    <table class="table datatable">
                        <thead>
                            <tr>
                                @*<th>
            @Html.DisplayNameFor(model => model.Id)
        </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.ContactUsRecord.IDD)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ContactUsRecord.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ContactUsRecord.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ContactUsRecord.Message)
                                </th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ContactUsList)
                            {
                            <tr>
                                @*<td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.IDD)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Message)
                                </td>

                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.IDD">


                                        <i class=" ri-delete-bin-5-fill"></i>
                                    </a>
                                </td>
                                @*<td>


            @Html.ActionLink("Delete", "Delete", new { id = item.IDD })
        </td>*@
                            </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</section>
