@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="col-xl-8">

    <div class="card">
        <div class="card-body pt-3">
            <div class="tab-content pt-2">
                <div class="tab-pane fade show active profile-overview" id="profile-overview">
                    <div>
                        <div>
                            <h4 class="card-title">Picture</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-lg-3 col-md-4 label">
                                    @Html.DisplayNameFor(model => model.PictureRecord.Id)
                                </dt>
                                <dd class="col-lg-9 col-md-8">
                                    @Html.DisplayFor(model => model.PictureRecord.Id)
                                </dd>
                                @*<dt class="col-lg-3 col-md-4 label">
                                    @Html.DisplayNameFor(model => model.PictureRecord.IDD)
                                </dt>
                                <dd class="col-lg-9 col-md-8">
                                    @Html.DisplayFor(model => model.PictureRecord.IDD)
                                </dd>*@
                                <dt class="col-lg-3 col-md-4 label">
                                    @Html.DisplayNameFor(model => model.PictureRecord.URL)
                                </dt>
                                <dd class="col-lg-9 col-md-8">
                                    <img src="@Model.PictureRecord.URL" style="width:150px" />
                                </dd>
                                <dt class="col-lg-3 col-md-4 label">
                                    @Html.DisplayNameFor(model => model.PictureRecord.Label)
                                </dt>
                                <dd class="col-lg-9 col-md-8">
                                    @Html.DisplayFor(model => model.PictureRecord.Label)
                                </dd>
                                <dt class="col-lg-3 col-md-4 label">
                                    @Html.DisplayNameFor(model => model.PictureRecord.AlbumID)
                                </dt>
                                <dd class="col-lg-9 col-md-8">
                                    @Html.DisplayFor(model => model.PictureRecord.AlbumID)
                                </dd>
                                <dt class="col-lg-3 col-md-4 label">
                                    @Html.DisplayNameFor(model => model.PictureRecord.UserID)
                                </dt>
                                <dd class="col-lg-9 col-md-8">
                                    @Html.DisplayFor(model => model.PictureRecord.UserID)
                                </dd>
                            </dl>
                        </div>
                        <div class="form-group">
                            <a asp-action="Edit" asp-route-id="@Model.PictureRecord.IDD" type="submit" value="Save" class="btn btn-primary">Edit</a>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
