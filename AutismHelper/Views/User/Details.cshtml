@model AutismHelper.ViewModels.MainVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="col-xl-8">

    <div class="card">
        <div class="card-body pt-3">
            <div class="tab-content pt-2">
                <div class="tab-pane fade show active profile-overview" id="profile-overview">
                    <div>
                        <div>
                            <h4 class="card-title">User</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-lg-3 col-md-4 label" style="display:none">
                                    @Html.DisplayNameFor(model => model.UserRecord.IDD)
                                </dt>
                                <dd class="col-lg-9 col-md-8" style="display:none">
                                    @Html.DisplayFor(model => model.UserRecord.IDD)
                                </dd>

                                <dt class="col-lg-3 col-md-4 label">
                                    @Html.DisplayNameFor(model => model.UserRecord.ProfilePictureURL)
                                </dt>
                                <dd class="col-lg-9 col-md-8">
                                    <img src="@Model.UserRecord.ProfilePictureURL" style="width:150px" />
                                </dd>
                                <dt class="col-lg-3 col-md-4 label" style="display:none">
                                    @Html.DisplayNameFor(model => model.UserRecord.Password)
                                </dt>
                                <dd class="col-lg-9 col-md-8" style="display:none">
                                    @Html.DisplayFor(model => model.UserRecord.Password)
                                </dd>
                                <dt class="col-lg-3 col-md-4 label">
                                    @Html.DisplayNameFor(model => model.UserRecord.Email)
                                </dt>
                                <dd class="col-lg-9 col-md-8">
                                    @Html.DisplayFor(model => model.UserRecord.Email)
                                </dd>
                                <dt class="col-lg-3 col-md-4 label">
                                    @Html.DisplayNameFor(model => model.UserRecord.Name)
                                </dt>
                                <dd class="col-lg-9 col-md-8">
                                    @Html.DisplayFor(model => model.UserRecord.Name)
                                </dd>
                            </dl>
                        </div>
                        @*<div>
                            @Html.ActionLink("Edit", "Edit", new { id = Model.UserRecord.IDD }) |
                            <a asp-action="Index">Back to List</a>
                        </div>*@
                        <div class="form-group">
                            <a asp-action="Edit" asp-route-id="@Model.UserRecord.IDD" type="submit" value="Save" class="btn btn-primary">Edit</a>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>