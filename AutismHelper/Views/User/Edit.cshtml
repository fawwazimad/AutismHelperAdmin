@model AutismHelper.ViewModels.MainVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<div class="pagetitle">
    <h1>
        Edit User
    </h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">User</a></li>
            <li class="breadcrumb-item active">    Edit User</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<h4>User</h4>

<section class="section">
    <div class="row">
        <div class="col-lg-6">

            <div class="card">
                <div class="card-body">
                    <br />
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group" style="display:none">
                            <label asp-for="UserRecord.IDD" class="control-label"></label>
                            <input asp-for="UserRecord.IDD" class="form-control" />
                            <span asp-validation-for="UserRecord.IDD" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="display:none">

                            <input hidden asp-for="UserRecord.Id" class="form-control" />
                            <span asp-validation-for="UserRecord.Id" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label class="control-label"></label>
                            <input asp-for="file" type="file" class="form-control" />

                        </div>
                        <div class="col-md-12" style="display:none">
                            <label asp-for="UserRecord.ProfilePictureURL" class="control-label"></label>
                            <input asp-for="UserRecord.ProfilePictureURL" class="form-control" />
                            <span asp-validation-for="UserRecord.ProfilePictureURL" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="UserRecord.Password" class="control-label"></label>
                            <input asp-for="UserRecord.Password" class="form-control" />
                            <span asp-validation-for="UserRecord.Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="UserRecord.Email" class="control-label"></label>
                            <input asp-for="UserRecord.Email" class="form-control" />
                            <span asp-validation-for="UserRecord.Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="UserRecord.Name" class="control-label"></label>
                            <input asp-for="UserRecord.Name" class="form-control" />
                            <span asp-validation-for="UserRecord.Name" class="text-danger"></span>
                        </div>
                 
                        <div class="form-group">

                            <input type="submit" value="Save" class="btn btn-primary">
                            <a class="btn btn-secondary" asp-action="Index">Back to List</a>

                        </div>
                   
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>

