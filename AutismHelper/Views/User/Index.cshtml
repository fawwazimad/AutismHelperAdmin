@model AutismHelper.ViewModels.MainVM

@{
    ViewData["Title"] = "Index";
}

@*<h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>*@


<div class="pagetitle">
    <h1>User</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">Data</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-12">
        
            <div class="card">
                <div class="card-body">
                    <h5 style="margin: revert;">
                       <a asp-action="Create" type="button" class="btn btn-outline-primary">Create New</a>
                    </h5>
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th scope="col" >
                                    ID
                                </th>
                                <th scope="col">
                                    Email
                                </th>
                                <th scope="col">
                                    Name
                                </th>
                                @*<th>
            @Html.DisplayNameFor(model => model.Id)
        </th>*@
                                <th scope="col">
                                    Picture
                                </th>
                                <th scope="col" style="display:none">
                                    Password
                                </th>

                                <th>Edit</th>
                                <th>Details</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.UserList)
                            {
                            <tr>
                                <td scope="row" >
                                    @Html.DisplayFor(modelItem => item.IDD)
                                </td>
                                <td scope="row">
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td scope="row">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                @*<td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>*@
                                <td scope="row">
                                    <img src="@item.ProfilePictureURL" style=" width: 150px;" />

                                </td>
                                <td scope="row" style="display:none">
                                    @Html.DisplayFor(modelItem => item.Password)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.IDD">


                                        <i class=" ri-edit-circle-fill"></i>
                                    </a>
                                </td>
                                <td>

                                    <a asp-action="Details" asp-route-id="@item.IDD">


                                        <i class=" ri-information-fill"></i>
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.IDD">


                                        <i class=" ri-delete-bin-5-fill"></i>
                                    </a>
                                </td>

                                @*<td scope="row">
            @Html.ActionLink("Edit", "Edit", new { id = item.IDD }) |
            @Html.ActionLink("Details", "Details", new { id = item.IDD }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.IDD })
        </td>*@
                            </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</section>

